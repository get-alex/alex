    "Carolyn Stransky <carolynstransky@gmail.com>"
  ],
  "bin": "cli.js",
  "files": [
    "index.js",
    "filter.js",
    "cli.js"
  ],
  "dependencies": {
    "meow": "^7.0.0",
    "rehype-parse": "^6.0.0",
    "rehype-retext": "^2.0.1",
    "remark-frontmatter": "^1.1.0",
    "remark-message-control": "^5.0.0",
    "remark-parse": "^7.0.0",
    "remark-retext": "^3.0.0",
    "retext-english": "^3.0.0",
    "retext-equality": "~4.3.0",
    "retext-profanities": "~5.0.0",
    "unified": "^8.0.0",
    "unified-diff": "^3.0.0",
    "unified-engine": "^7.0.0",
    "update-notifier": "^3.0.0",
    "vfile": "^4.0.0",
    "vfile-reporter": "^6.0.0",
    "vfile-sort": "^2.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^15.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "xo": "^0.25.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s alex -o alex.js",
    "build-mangle": "browserify . -s alex -p tinyify -o alex.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "alex": {
    "allow": [
      "butt"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "ava/no-import-test-files": "off"
    },
    "ignores": [
      "alex.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm",
      [
        "toc",
        {
          "heading": "contents"
        }
      ]
    ]
  }
}
