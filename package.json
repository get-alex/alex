{
  "name": "alexjs.com",
  "private": true,
  "version": "0.0.0",
  "description": "The alexjs.com website",
  "license": "MIT",
  "repository": "get-alex/alex",
  "bugs": "https://github.com/get-alex/alex/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "dependencies": {},
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix && stylelint src/index.css --fix",
    "build:js": "browserify src -p tinyify > dest/index.js",
    "build:css": "postcss src/index.css > dest/index.css",
    "build:html": "rehype -qf -u preset-minify -u prevent-favicon-request -o dest src",
    "build:asset": "cp src/* dest",
    "build": "npm run build:asset && npm run build:js && npm run build:css && npm run build:html",
    "test": "npm run format && npm run build"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "cssnano": "^4.1.0",
    "debounce": "^1.0.0",
    "global": "^4.3.2",
    "postcss-cli": "^6.0.0",
    "prettier": "^1.14.2",
    "rehype-cli": "^8.0.0",
    "rehype-preset-minify": "^4.0.0",
    "rehype-prevent-favicon-request": "^2.0.0",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "retext-english": "^3.0.0",
    "retext-equality": "^4.2.0",
    "retext-profanities": "^5.0.0",
    "stylelint": "^11.0.0",
    "stylelint-config-standard": "^19.0.0",
    "tinyify": "^2.0.0",
    "unified": "^8.0.0",
    "vfile": "^4.0.0",
    "vfile-sort": "^2.0.0",
    "vfile-statistics": "^1.0.0",
    "virtual-dom": "^2.1.1",
    "xo": "^0.25.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/prefer-node-append": "off",
      "guard-for-in": "off",
      "prefer-arrow-callback": "off",
      "no-var": "off"
    }
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
