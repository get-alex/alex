    "cli",
    "bin",
    "alex",
    "equal",
    "race",
    "religion",
    "sex",
    "orientation",
    "identity",
    "gender",
    "sensitive",
    "insensitive",
    "neutral",
    "writing",
    "language",
    "english"
  ],
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
